SELECT * FROM TB_TAREFAS 

--/listarTarefasDiarias
SELECT 
    ID_TAREFA, 
    NOME_TAREFA 
FROM TB_TAREFAS 
WHERE 
    TIPO_TAREFA = 'Diária' 
    AND NOME_USUARIO = {}
    AND DATA_CRIACAO = {}
    AND TAREFA_CONCLUIDA = 0


--/listarIventarioTarefas
SELECT 
        ID_TAREFA, 
        NOME_TAREFA 
FROM TB_TAREFAS 
WHERE 
        TIPO_TAREFA = 'Inventário' 
        AND NOME_USUARIO = {}
        AND DATA_CRIACAO = {}
        AND TAREFA_CONCLUIDA = 0


-- Data de início da tarefa não-concluída mais antiga (????????)
SELECT
		DATA_CRIACAO,
		NOME_TAREFA
		
FROM 	TB_TAREFAS		
WHERE
		NOME_USUARIO = 'BiancaZL'
		AND TAREFA_CONCLUIDA = 0


-- Total de tarefas NÃO CONCLUÍDAS
SELECT
		COUNT(*)
		
FROM 	TB_TAREFAS	
WHERE
		NOME_USUARIO = {}
		AND TAREFA_CONCLUIDA = 0


-- Total de tarefas CONCLUÍDAS
SELECT
		COUNT(*)
		
FROM 	TB_TAREFAS	
WHERE
		NOME_USUARIO = {}
		AND TAREFA_CONCLUIDA = 1


-- Total de tarefas concluídas (no dia/período escolhido)
SELECT
		NVL(QTD_TAREFAS_CONCLUIDAS, 0)
		
FROM 	TB_USUARIOS		
WHERE
		USUARIO = 'BiancaZL'
		AND TAREFA_CONCLUIDA = 0
		AND DATA_CONCLUSAO IN (021122,021222)

